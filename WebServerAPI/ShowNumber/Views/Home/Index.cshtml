            <div class="info-right">
                <div class="info-quay">QUẦY</div>
                <div class="info-stt">SỐ THỨ TỰ</div>
            </div>
        </div>
        <div class="body">
            <div class="info-left">
                <div class="quay"></div>
                <div class="stt"></div>
            </div>
            <div class="info-right">
                <div class="quay"></div>
                <div class="stt"></div>
            </div>
        </div>
    </div>
